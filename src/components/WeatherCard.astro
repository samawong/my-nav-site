---
// 高德天气API配置
const AMAP_KEY = import.meta.env.PUBLIC_AMAP_KEY || ''; // 需要在 .env 文件中配置
const CITY_CODE = '110000'; // 北京市的城市编码

async function getWeatherData() {
  try {
    const response = await fetch(
      `https://restapi.amap.com/v3/weather/weatherInfo?key=${AMAP_KEY}&city=${CITY_CODE}&extensions=base`
    );
    const data = await response.json();
    
    if (data.status === '1' && data.lives?.length > 0) {
      return data.lives[0];
    }
    return null;
  } catch (error) {
    console.error('获取天气数据失败:', error);
    return null;
  }
}

// 获取空气质量数据
async function getAirQuality() {
  try {
    const response = await fetch(
      `https://restapi.amap.com/v3/weather/weatherInfo?key=${AMAP_KEY}&city=${CITY_CODE}&extensions=all`
    );
    const data = await response.json();
    
    if (data.status === '1' && data.forecasts?.length > 0) {
      return data.forecasts[0];
    }
    return null;
  } catch (error) {
    console.error('获取空气质量数据失败:', error);
    return null;
  }
}

// 天气图标映射
const weatherIcons = {
  '晴': '☀️',
  '多云': '⛅',
  '阴': '☁️',
  '小雨': '🌧️',
  '中雨': '🌧️',
  '大雨': '⛈️',
  '雷阵雨': '⛈️',
  '雪': '🌨️',
  '雾': '🌫️',
  '霾': '😷',
};

const weatherData = await getWeatherData();
const airQuality = await getAirQuality();

// 获取当前时间
const now = new Date();
const hours = now.getHours().toString().padStart(2, '0');
const minutes = now.getMinutes().toString().padStart(2, '0');
---

<div class="space-y-4">
  {weatherData ? (
    <div>
      <!-- 主要天气信息 -->
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
          <span class="text-4xl mr-3">
            {weatherIcons[weatherData.weather] || '🌈'}
          </span>
          <div>
            <div class="text-2xl font-bold">{weatherData.temperature}°C</div>
            <div class="text-gray-500">{weatherData.weather}</div>
          </div>
        </div>
        <div class="text-right">
          <div class="text-sm text-gray-500">更新时间</div>
          <div class="font-medium">{hours}:{minutes}</div>
        </div>
      </div>

      <!-- 详细信息 -->
      <div class="grid grid-cols-2 gap-4 text-sm">
        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-gray-500">湿度</div>
          <div class="font-medium">{weatherData.humidity}%</div>
        </div>
        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-gray-500">风向</div>
          <div class="font-medium">{weatherData.winddirection}风 {weatherData.windpower}级</div>
        </div>
      </div>

      <!-- 空气质量 -->
      {airQuality && (
        <div class="mt-4 bg-gray-50 rounded-lg p-3">
          <div class="text-gray-500 mb-1">空气质量</div>
          <div class="flex items-center justify-between">
            <span class="font-medium">{airQuality.casts[0]?.daypower || '良好'}</span>
            <span class="text-xs px-2 py-1 bg-green-100 text-green-600 rounded">
              {weatherData.province} {weatherData.city}
            </span>
          </div>
        </div>
      )}
    </div>
  ) : (
    <div class="text-center text-gray-500 py-4">
      <div class="text-4xl mb-2">🌈</div>
      <div>暂无天气数据</div>
    </div>
  )}
</div>

<style>
  .space-y-4 > :not([hidden]) ~ :not([hidden]) {
    margin-top: 1rem;
  }
</style> 