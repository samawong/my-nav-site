---
const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-200">
  <div class="container mx-auto px-6 py-8">
    <div class="flex flex-col items-center space-y-4">
      {/* 社交链接 */}
      <div class="flex items-center space-x-6">
        <a
          href={`https://github.com/${import.meta.env.PUBLIC_USER_GITHUB}`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-gray-700 transition-colors duration-300"
          aria-label="GitHub"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>
        <a
          href={`https://twitter.com/${import.meta.env.PUBLIC_USER_TWITTER}`}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 hover:text-gray-700 transition-colors duration-300"
          aria-label="Twitter"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
          </svg>
        </a>
        <a
          href={`mailto:${import.meta.env.PUBLIC_USER_EMAIL}`}
          class="text-gray-500 hover:text-gray-700 transition-colors duration-300"
          aria-label="Email"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
      </div>

      {/* 版权信息 */}
      <div class="text-center">
        <p class="text-gray-500 text-sm">
          © {currentYear} {import.meta.env.PUBLIC_WEBSITE_NAME}. All rights reserved.
        </p>
        <p class="text-gray-400 text-xs mt-1">
          Made with ❤️ by <a href={`https://github.com/${import.meta.env.PUBLIC_USER_GITHUB}`} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-600">samawong</a>
        </p>
      </div>

      {/* 备案信息 */}
      <div class="text-gray-400 text-xs">
        <a
          href="https://beian.miit.gov.cn/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-gray-600 transition-colors duration-300"
        >
          
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    background-image: linear-gradient(to bottom, transparent, rgba(249, 250, 251, 0.5));
  }
</style> 